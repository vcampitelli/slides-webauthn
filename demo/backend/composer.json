{
    "name": "vcampitelli/webauthn-backend",
    "description": "API de demonstração de um Relying Party do WebAuthn",
    "keywords": [
        "webauthn",
        "auth",
        "passwordless"
    ],
    "homepage": "https://viniciuscampitelli.com/",
    "license": "MIT",
    "authors": [
        {
            "name": "Vinícius Campitelli",
            "email": "eu@viniciuscampitelli.com",
            "homepage": "https://viniciuscampitelli.com/"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "monolog/monolog": "^2.9",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "web-auth/webauthn-lib": "^4.7"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}
